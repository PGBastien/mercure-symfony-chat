{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container mt-2">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-4 text-left">
                <button class="btn btn-sm btn-success" onclick="window.history.back();">
                    <i class="fas fa-angle-double-left"></i> back
                </button>
            </div>
            <div class="col-4 text-center">
                <img class="rounded-circle" width="60" height="60" alt="{{ app.user.name }}"
                src="{{ asset( app.user.picture ? 'uploads/users/' ~ app.user.picture  : '/build/images/default-avatar.jpeg') }}">
                <span><strong class="text-success">{{ app.user.name }}</strong></span>
            </div>
            <div class="col-4 text-right">
                <a href="{{ path('user_logout') }}" onclick="return window.confirm('Are you sure you want to sign out?')" class="btn btn-danger btn-sm">
                logout <i class="fas fa-angle-double-right"></i>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div id="root" class="data" data-user="{{ app.user.id }}"></div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}